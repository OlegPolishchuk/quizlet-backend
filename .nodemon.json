{
  "watch": ["src"],
  "ext": "ts,json,prisma",
  "ignore": [
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "dist/**/*",
    "node_modules/**/*"
  ],
  "exec": "tsx src/index.ts",
  "spawn": true,
  "poll": true,
  "delay": 500,
  "verbose": true,
  "env": {
    "NODE_ENV": "development",
    "TS_NODE_PROJECT": "./tsconfig.json"
  },
  "nodemonConfig": {
    "ignore": ["dist/**"]
  }
}
